oneminute = TIMEWINDOW({size = 6000000000}, soccergame)

no_interrupts = SELECT({predicate = 'interruption = true'}, System.interruptions)

streams_join = join({predicate = 'timestamp >= start_interruption && timestamp <= end_interruption'}, oneminute, no_interrupts)

map_parameters_for_computation = STATEMAP({expressions = ['sid', ['timestamp - __last_1.timestamp', 'time_diff']]}, streams_join)

result = AGGREGATE({group_by = ['sid'], aggregations=[['SUM', 'time_diff', 'COUNT_time', 'timestamp']]}, map_parameters_for_computation)
